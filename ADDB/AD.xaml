<Page x:Class="ADDB.AD"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ADDB"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Объявления" Height="600" Width="900">
    

    <Grid Background="White">
        <!-- Логотип приложения -->
        <Image Name="AppLogo" Source="logo.png" Width="120" Height="120" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16"/>

        <!-- Заголовок -->
        <TextBlock Text="Частные Объявления" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,13,0,0" FontSize="21" Height="30" Width="210"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,136,0,0">
            <TextBox x:Name="SearchTextBox" Width="200" TextChanged="SearchTextBox_TextChanged" />
            <ComboBox x:Name="CityFilter" Width="100" SelectionChanged="CityFilter_SelectionChanged" DisplayMemberPath="Name" SelectedValuePath="CityID"/>
            <ComboBox x:Name="CategoryComboBox" Width="100" SelectionChanged="CategoryComboBox_SelectionChanged" DisplayMemberPath="Name" SelectedValuePath="CategoryID"/>
            <ComboBox x:Name="StatusFilter" Width="100" SelectionChanged="StatusFilter_SelectionChanged" DisplayMemberPath="Name" SelectedValuePath="TypeID"/>
        </StackPanel>
        <!-- Список объявлений -->
        <ListBox Name="ADListBox" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="16,250,16,10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Title}" />
                        <TextBlock Text="{Binding City.Name}"/>
                        <TextBlock Text="{Binding AdCategory.Name}"/>
                        <TextBlock Text="{Binding StatusType.Name}"/>
                        <Image Source="{Binding ImagePath}" Height="150" Width="200"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
            <StackPanel Orientation="Vertical" Margin="0 10 0 0">
                <TextBlock Text="Статус: " FontSize="14" FontWeight="Bold"/>
                <RadioButton x:Name="activeRb" Margin="0 10" Content="Активно" IsChecked="True" GroupName="Status" Checked="RadioButton_Checked"/>
                <RadioButton x:Name="finishedRb" Content="Завершено" GroupName="Status" Checked="RadioButton_Checked"/>
            </StackPanel>
        </Grid>
    </Page>