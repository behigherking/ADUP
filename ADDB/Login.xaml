<Page x:Class="ADDB.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ADDB"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">
    <Window>
        <Grid Background="White">
            <TextBlock Text="Вход в систему" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0"/>
            <TextBox Name="LoginTextBox" Width="200" Height="30" Margin="0,121,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <PasswordBox Name="PasswordBox" Width="200" Height="30" Margin="0,176,0,0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button Content="Войти" Width="120" Height="40" Margin="0,234,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" Click="LoginButton_Click"/>
        </Grid>
    </Window>
</Page>
